<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bruce.android.activity.RegisterActivity">
    <include layout="@layout/layout_main_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:orientation="vertical">


        <!--身份证-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editsharp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/yzma"
                android:drawablePadding="2dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="身份证"
                android:textSize="@dimen/text_size_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light" />

            <EditText
                android:id="@+id/idCard_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:paddingLeft="10dp"
                android:text=""
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
        <!--手机号码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editsharp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/yzma"
                android:drawablePadding="2dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="手机号码"
                android:textSize="@dimen/text_size_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/phoneNumber_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textSize="@dimen/text_size_12" />

                <Button
                    android:id="@+id/verifiCode_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/my_bg_color"
                    android:paddingLeft="10dp"
                    android:text="验证码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </LinearLayout>
        <!--验证码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editsharp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/yzma"
                android:drawablePadding="2dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="验证码"
                android:textSize="@dimen/text_size_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light" />

            <EditText
                android:id="@+id/verifiCode_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:paddingLeft="10dp"
                android:text=""
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
        <!--用户邮箱-->
        <LinearLayout
            android:id="@+id/mail_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editsharp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/yzma"
                android:drawablePadding="2dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="邮    箱"
                android:textSize="@dimen/text_size_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light" />


            <EditText
                android:id="@+id/mail_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:paddingLeft="10dp"
                android:text=""
                android:textSize="@dimen/text_size_12" />


        </LinearLayout>

        <!--用户密码-->
        <LinearLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editsharp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/yzma"
                android:drawablePadding="2dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="用户密码"
                android:textSize="@dimen/text_size_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light" />


            <EditText
                android:id="@+id/password_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:text=""
                android:textSize="@dimen/text_size_12" />


        </LinearLayout>
        <!--确认密码-->
        <LinearLayout
            android:id="@+id/confirm_password_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editsharp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/yzma"
                android:drawablePadding="2dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="确认密码"
                android:textSize="@dimen/text_size_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light" />

            <EditText
                android:id="@+id/confirm_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:text=""
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/nextStup_btn"
        android:layout_marginRight="@dimen/space_15"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/my_bg_color"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        android:text="确定"/>
</LinearLayout>
